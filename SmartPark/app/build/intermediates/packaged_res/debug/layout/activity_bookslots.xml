<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:background="#1E1E2D"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bookslots">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="BOOK SLOTS"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.03" />

    <TextView
        android:id="@+id/entryLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="ENTRY"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/title"
        app:layout_constraintVertical_bias="0.032" />

    <GridLayout
        android:id="@+id/parkingGrid"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:columnCount="2"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/entryLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/exitLabel">

        <!-- Parking Slot A-0 -->
        <LinearLayout
            android:id="@+id/slot_A0"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="fill"
            android:layout_margin="20dp"
            android:background="@drawable/parking_slot_background"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/slot_A0_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="A-0"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <Button
                android:id="@+id/slot_A0_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="#FFAA33"
                android:text="BOOK"
                android:textColor="#FFFFFF"
                android:contentDescription="Book slot A-0" />
        </LinearLayout>

        <!-- Parking Slot A-1 -->
        <LinearLayout
            android:id="@+id/slot_A1"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="fill"
            android:layout_margin="20dp"
            android:background="@drawable/parking_slot_background"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/slot_A1_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="A-1"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <Button
                android:id="@+id/slot_A1_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="#FFAA33"
                android:text="BOOK"
                android:textColor="#FFFFFF"
                android:contentDescription="Book slot A-1" />
        </LinearLayout>

        <!-- Parking Slot A-2 -->
        <LinearLayout
            android:id="@+id/slot_A2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="fill"
            android:layout_margin="20dp"
            android:background="@drawable/parking_slot_background"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/slot_A2_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="A-2"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <Button
