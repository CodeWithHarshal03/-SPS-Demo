                android:backgroundTint="#FFAA33"
                android:text="BOOK"
                android:textColor="#FFFFFF"
                android:contentDescription="Book slot A-3" />
        </LinearLayout>

        <!-- Parking Slot A-4 -->
        <LinearLayout
            android:id="@+id/slot_A4"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="fill"
            android:layout_margin="20dp"
            android:background="@drawable/parking_slot_background"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/slot_A4_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="A-4"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <Button
                android:id="@+id/slot_A4_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="#FFAA33"
                android:text="BOOK"
                android:textColor="#FFFFFF"
                android:contentDescription="Book slot A-4" />
        </LinearLayout>

        <!-- Parking Slot A-5 -->
        <LinearLayout
            android:id="@+id/slot_A5"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="fill"
            android:layout_margin="20dp"
            android:background="@drawable/parking_slot_background"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/slot_A5_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="A-5"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <Button
                android:id="@+id/slot_A5_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="#FFAA33"
                android:text="BOOK"
                android:textColor="#FFFFFF"
                android:contentDescription="Book slot A-5" />
        </LinearLayout>

        <!-- Parking Slot A-6 -->
        <LinearLayout
            android:id="@+id/slot_A6"
            android:layout_width="150dp"
