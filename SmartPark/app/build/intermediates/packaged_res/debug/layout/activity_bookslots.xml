        </LinearLayout>

        <!-- Parking Slot A-7 -->
        <LinearLayout
            android:id="@+id/slot_A7"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="fill"
            android:layout_margin="20dp"
